<customcontrols:PageHeaderControl  
    xmlns:customcontrols="clr-namespace:Pharmacy.Implement.Utils.CustomControls"                                   
    x:Class="Pharmacy.Implement.Windows.MainScreenWindow.MVVM.Views.UserControls.PageHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" Margin="10"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" 
               Source="{Binding (customcontrols:PageHeaderControl.HeaderIcon),RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=customcontrols:PageHeaderControl}}" 
               Stretch="Uniform"/>
        <Viewbox Grid.Column="3" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Center"
                 Stretch="Uniform">
            <TextBlock  
                       Text="{Binding (customcontrols:PageHeaderControl.HeaderText),RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=customcontrols:PageHeaderControl}}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left" 
                       FontWeight="Bold" 
                       FontFamily="{StaticResource VNFOswald}" 
                       FontSize="{StaticResource FontSizeLarge_Float}"/>
        </Viewbox>
    </Grid>
</customcontrols:PageHeaderControl>
