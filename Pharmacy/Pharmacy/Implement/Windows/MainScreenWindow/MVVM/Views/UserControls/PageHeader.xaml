<customcontrols:PageHeaderControl  
    xmlns:customcontrols="clr-namespace:Pharmacy.Implement.Utils.CustomControls"                                   
    x:Class="Pharmacy.Implement.Windows.MainScreenWindow.MVVM.Views.UserControls.PageHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Pharmacy.Implement.Windows.MainScreenWindow.MVVM.Views.UserControls"
    mc:Ignorable="d" Margin="10"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="50"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Image Grid.Column="0" Source="{Binding (customcontrols:PageHeaderControl.HeaderIcon),RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=customcontrols:PageHeaderControl}}" Height="50" HorizontalAlignment="Stretch" Stretch="UniformToFill"/>
    <TextBlock Grid.Column="1" Margin="10,0,0,0" Text="{Binding (customcontrols:PageHeaderControl.HeaderText),RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=customcontrols:PageHeaderControl}}" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" FontFamily="{StaticResource VNFOswald}" FontSize="{StaticResource FontSizeLarge_Float}"/>
</customcontrols:PageHeaderControl>
