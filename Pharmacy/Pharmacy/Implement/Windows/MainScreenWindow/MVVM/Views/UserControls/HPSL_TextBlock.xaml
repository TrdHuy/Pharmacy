<UserControl
    x:Class="Pharmacy.Implement.Windows.MainScreenWindow.MVVM.Views.UserControls.HPSL_TextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Pharmacy.Implement.Windows.MainScreenWindow.MVVM.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border>
        <StackPanel DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:HPSL_TextBlock}}}" Orientation="Horizontal">

            <TextBlock
                VerticalAlignment="Center"
                FontFamily="/Pharmacy;component/Resource/Fonts/#Libel Suit Rg"
                FontSize="{Binding TitleFontSize, FallbackValue=30}"
                FontWeight="SemiBold"
                Foreground="White"
                Text="{Binding Title , FallbackValue=Họ và tên}" />
            <Grid Width="20" />

            <TextBlock
                VerticalAlignment="Center"
                FontFamily="/Pharmacy;component/Resource/Fonts/#UVN Bai Sau"
                FontSize="{Binding UserInputFontSize, FallbackValue=20}"
                Foreground="White"
                Text="{Binding UserInput, FallbackValue=Nguyễn Văn A}">
                
            </TextBlock>

        </StackPanel>
    </Border>
</UserControl>