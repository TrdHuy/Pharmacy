<Application x:Class="Pharmacy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pharmacy"
             StartupUri="Implement/Windows/LoginScreenWindow/MVVM/Views/LoginScreenWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Order is important -->
                <ResourceDictionary Source="Resource/Styles/Images.xaml" />
                <ResourceDictionary Source="Resource/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resource/Styles/Fonts.xaml" />
                <ResourceDictionary Source="Resource/Styles/Buttons.xaml" />
                <ResourceDictionary Source="Resource/Styles/Texts.xaml" />
                <ResourceDictionary Source="Resource/Styles/Windows.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
